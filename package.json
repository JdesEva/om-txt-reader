{
  "name": "eva-reader",
  "displayName": "EVA Reader",
  "description": "一个在 VS Code 中阅读 txt 文档的插件。",
  "version": "0.0.1",
  "publisher": "jdeseva",
  "repository": {
    "type": "git",
    "url": "https://github.com/JdesEva/om-txt-reader.git"
  },
  "bugs": {
    "url": "https://github.com/JdesEva/om-txt-reader/issues"
  },
  "homepage": "https://github.com/JdesEva/om-txt-reader#readme",
  "qna": "marketplace",
  "keywords": [
    "txt",
    "reader",
    "文档",
    "阅读器"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "evaReader.openBookshelf",
        "title": "eva-reader: 打开阅读器"
      },
      {
        "command": "evaReader.openSettings",
        "title": "eva-reader: 打开配置"
      },
      {
        "command": "evaReader.search",
        "title": "eva-reader: 搜索文本"
      },
      {
        "command": "evaReader.showChapters",
        "title": "eva-reader: 显示章节列表"
      },
      {
        "command": "evaReader.configureBookPattern",
        "title": "eva-reader: 配置当前文档章节分割规则"
      }
    ],
    "keybindings": [
      {
        "command": "evaReader.scrollDown",
        "key": "ctrl+pagedown",
        "mac": "cmd+pagedown",
        "when": "evaReaderActive"
      },
      {
        "command": "evaReader.scrollUp",
        "key": "ctrl+pageup",
        "mac": "cmd+pageup",
        "when": "evaReaderActive"
      }
    ],
    "configuration": {
      "title": "EVA Reader",
      "properties": {
        "evaReader.booksDirectory": {
          "type": "string",
          "default": "",
          "description": "默认的文档目录"
        },
        "evaReader.defaultChapterPattern": {
          "type": "string",
          "default": "^第[0-9一二三四五六七八九十百千]+[章节]\\s+.+$",
          "description": "默认的章节分割规则"
        },
        "evaReader.fontSize": {
          "type": "number",
          "default": 16,
          "description": "阅读器字体大小"
        },
        "evaReader.lineHeight": {
          "type": "number",
          "default": 1.8,
          "description": "阅读器行高"
        },
        "evaReader.scrollStep": {
          "type": "number",
          "default": 3,
          "description": "每次滚动的行数"
        },
        "evaReader.chunkSize": {
          "type": "number",
          "default": 200,
          "description": "分块加载时每块的行数"
        },
        "evaReader.bufferLines": {
          "type": "number",
          "default": 50,
          "description": "虚拟滚动缓冲区行数（上下各缓冲的行数）"
        },
        "evaReader.enableVirtualScroll": {
          "type": "boolean",
          "default": true,
          "description": "是否启用虚拟滚动（大文件时建议启用）"
        },
        "evaReader.largeFileThreshold": {
          "type": "number",
          "default": 5,
          "description": "大文件阈值（MB），超过此大小将启用分块加载"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  }
}
